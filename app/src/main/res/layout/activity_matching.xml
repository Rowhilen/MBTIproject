<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로가기"/>

    <View
        android:id="@+id/image_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:layout_below="@id/btnBack"
        android:background="@drawable/image_2"/>

    <TextView
        android:id="@+id/tvM1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나와 최적의 파트너를\n지금 찾아보세요!"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="23dp"
        android:layout_below="@id/image_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvM2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매칭을 위해 몇 가지 답변이 필요해요."
        android:layout_below="@id/tvM1"
        android:layout_centerHorizontal="true"
        android:textSize="13dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tvM2"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etOrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/field_bg"
                android:padding="12dp"
                android:hint="소속기관"/>
            <Button
                android:id="@+id/btnSearchOrg"
                style="@style/PrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="72dp"
                android:paddingHorizontal="12dp"
                android:lines="1"
                android:ellipsize="end"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:text="검색"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etClass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/field_bg"
                android:padding="12dp"
                android:hint="수강 반"/>
            <Button
                android:id="@+id/btnSearchClass"
                style="@style/PrimaryButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="72dp"
                android:paddingHorizontal="12dp"
                android:lines="1"
                android:ellipsize="end"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:text="검색"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="다음"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
